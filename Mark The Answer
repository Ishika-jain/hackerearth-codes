#include <iostream>
using namespace std;

int main() {
	int n,i,t;
	cin >>n>>t;
	int a[n];									// Reading input from STDIN
    for(int i=0;i<n;i++)
    {
		cin>>a[i];
	}
	int c=0,d=0;
	i=0;
   for(int i=0;i<n;i++)
   {
       if (a[i]<=t)
       {
           d++;
       }
	   else if(a[i]>t)
	   {
	       if (a[i+1]<=t)
	       {
	        	if (c==1)
		       {
		        	cout<<d;
			        exit(0);
		       }
		        if (c==0)
	                c=1;
	        }
	        else
	        {
	            cout<<d;
			        exit(0);
	        }
	  }
	

   }
           cout<<d;

}

